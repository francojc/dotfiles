# Ghostty config

# UI
cursor-color = #FF2557
cursor-style = bar
adjust-cursor-thickness = 2
mouse-hide-while-typing = true
font-size = 12
unfocused-split-opacity = 0.7
split-divider-color = #7B7252
window-padding-x = 9
window-padding-y = 9

# macOS
macos-titlebar-style = tabs
macos-option-as-alt = right

# Tabs and windows
window-decoration = none
window-theme = ghostty
window-new-tab-position = end
macos-window-shadow = false

# Theme
# theme = nightfox
theme = GruvboxDarkHard
# theme = Arthur

# Enhancements
confirm-close-surface = true
copy-on-select = clipboard
clipboard-write = allow
clipboard-trim-trailing-spaces = true
shell-integration = zsh
shell-integration-features = no-cursor,no-sudo,no-title

# Keybindings -----
# Prompts
keybind = global:ctrl+shift+q=toggle_quick_terminal
keybind = ctrl+shift+z=jump_to_prompt:-1
keybind = ctrl+shift+x=jump_to_prompt:1

# Splits
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+m=toggle_split_zoom
keybind = ctrl+shift+n=goto_split:next
keybind = ctrl+shift+p=goto_split:previous

# Resize
keybind = alt+j=resize_split:down,32
keybind = alt+k=resize_split:up,32
keybind = alt+h=resize_split:left,32
keybind = alt+l=resize_split:right,32
keybind = ctrl+shift+equal=equalize_splits

# Text
keybind = alt+m=text: |>
keybind = alt+-=text: <-

