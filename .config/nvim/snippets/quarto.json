{
  "Quarto Code Block": {
    "prefix": "qcode",
    "body": ["```{${1:language}}", "#| label: ${2:label}", "${0}", "```"],
    "description": "A Quarto code block with language specification"
  },
  "Callout Block: Tip": {
    "prefix": "qtip",
    "body": [
      "::: {.callout}",
      "**{{< fa hand-point-up >}} Tip**",
      "",
      "${0}",
      ":::"
    ],
    "description": "A Quarto tip callout block"
  },
  "Callout Block: Warning": {
    "prefix": "qwarn",
    "body": [
      "::: {.callout}",
      "**{{< fa triangle-exclamation >}} Warning**",
      "",
      "${0}",
      ":::"
    ],
    "description": "A Quarto warning callout block"
  },
  "Callout Block: Dive Deeper": {
    "prefix": "qdive",
    "body": [
      "::: {.callout}",
      "**{{< fa medal >}} Dive deeper**",
      "",
      "${0}",
      ":::"
    ],
    "description": "A Quarto dive deeper callout block"
  },
  "Aider call": {
    "prefix": "caider",
    "body": [
      "<!--",
      "-- ${0}",
      "-->"
    ],
    "description": "Aider call"
  },
  "Code block: label": {
    "prefix": "cblabel",
    "body": [
      "#| label: ${1:label}",
      "${0}"
    ],
    "description": "Label in code block"
  },
  "Code block: echo": {
    "prefix": "cbecho",
    "body": [
      "#| echo: ${1|true,false|}",
      "${0}"
    ],
    "description": "Echo in code block"
  },
  "Code block: include": {
    "prefix": "cbinclude",
    "body": [
      "#| include: ${1|true,false|}",
      "${0}"
    ],
    "description": "Include in code block"
  },
  "Code block: message": {
    "prefix": "cbmessage",
    "body": [
      "#| message: ${1|true,false|}",
      "${0}"
    ],
    "description": "Message in code block"
  },
  "Inline TODO comment": {
    "prefix": "todo",
    "body": [
      "<!-- TODO: ${0} -->"
    ],
    "description": "Inline TODO HTML comment"
  },
  "Inline INFO comment": {
    "prefix": "info",
    "body": [
      "<!-- INFO: ${0} -->"
    ],
    "description": "Inline INFO HTML comment"
  },
  "Inline WARNING comment": {
    "prefix": "warning",
    "body": [
      "<!-- WARNING: ${0} -->"
    ],
    "description": "Inline WARNING HTML comment"
  },
  "Inline BUG comment": {
    "prefix": "bug",
    "body": [
      "<!-- BUG: ${0} -->"
    ],
    "description": "Inline BUG HTML comment"
  },
  "Two-column layout": {
    "prefix": "qcol2",
    "body": [
      "::: {.columns}",
      "::: {.column width=\"${1:50}%\"}",
      "${2:Left content}",
      ":::",
      "",
      "::: {.column width=\"${3:50}%\"}",
      "${4:Right content}",
      ":::",
      ":::",
      "${0}"
    ],
    "description": "Two-column layout for side-by-side content"
  },
  "Font Awesome icon": {
    "prefix": "qfa",
    "body": [
      "{{< fa ${1:icon-name} >}} ${0}"
    ],
    "description": "Font Awesome icon shortcode"
  },
  "R code setup block": {
    "prefix": "qrsetup",
    "body": [
      "```{r}",
      "#| label: setup",
      "#| echo: false",
      "#| message: false",
      "#| warning: false",
      "",
      "${0}",
      "```"
    ],
    "description": "R code block with standard setup options"
  },
  "Notes div": {
    "prefix": "qnotes",
    "body": [
      "::: notes",
      "${0}",
      ":::"
    ],
    "description": "Speaker notes div for presentations"
  },
  "Callout block: Note": {
    "prefix": "qnote",
    "body": [
      "::: {.callout-note}",
      "## ${1:Title}",
      "",
      "${0}",
      ":::"
    ],
    "description": "Quarto note callout block"
  },
  "Callout block: Important": {
    "prefix": "qimportant",
    "body": [
      "::: {.callout-important}",
      "## ${1:Title}",
      "",
      "${0}",
      ":::"
    ],
    "description": "Quarto important callout block"
  },
  "Callout block: Caution": {
    "prefix": "qcaution",
    "body": [
      "::: {.callout-caution}",
      "## ${1:Title}",
      "",
      "${0}",
      ":::"
    ],
    "description": "Quarto caution callout block"
  }
}
