#!/usr/bin/env bash
# Wrapper for pptx2md.py

SCRIPT_NAME="pdc-pptx2md"; SCRIPT_VERSION="1.0.0"
. "$(dirname "$0")/common"

show_help() {
    cat << EOF
pdc-pptx2md - PowerPoint to Markdown converter wrapper

USAGE:
    pdc-pptx2md [--help|-h] [OPTIONS]

DESCRIPTION:
    Wrapper script for pptx2md.py that converts PowerPoint presentations
    to Markdown format. This script forwards all arguments to the Python
    script while providing consistent error handling.

    The actual functionality and options depend on the underlying
    pptx2md.py script.

DEPENDENCIES:
    - pptx2md.py: Main PowerPoint to Markdown conversion script
    - common: Shared script utilities and functions

EXAMPLES:
    pdc-pptx2md input.pptx
    # Convert PowerPoint to Markdown

    pdc-pptx2md --help
    # Show this help message

    pdc-pptx2md [python-script-options]
    # Pass options directly to the Python script

NOTES:
    - This is a wrapper script; see pptx2md.py for detailed usage
      options and functionality
    - All arguments are passed through to the underlying Python script
    - Requires the Python script to be executable and in the same directory
    - Typically used for converting presentation slides to markdown documents

EOF
}

# Check for help flags
if [[ "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
    show_help
    exit 0
fi

main(){
  if [[ -x "$(dirname "$0")/pptx2md.py" ]]; then
    "$(dirname "$0")/pptx2md.py" "$@"
  else
    die "pptx2md.py not found"
  fi
}

main "$@"
