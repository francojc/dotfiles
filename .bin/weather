#!/usr/bin/env python

import argparse
import requests
import os

icon_mapping = {
    "01d": "â˜€ï¸",
    "01n": "â˜¾",
    "02d": "â›…ï¸",
    "02n": "â›…ï¸",
    "03d": "â˜ï¸",
    "03n": "â˜ï¸",
    "04d": "â˜ï¸",
    "04n": "â˜ï¸",
    "09d": "ğŸŒ§ï¸",
    "09n": "ğŸŒ§ï¸",
    "10d": "ğŸŒ¦ï¸",
    "10n": "ğŸŒ¦ï¸",
    "11d": "â›ˆï¸",
    "11n": "â›ˆï¸",
    "13d": "â„ï¸",
    "13n": "â„ï¸",
    "50d": "ğŸŒ«ï¸",
    "50n": "ğŸŒ«ï¸",
