#!/usr/bin/env bash
# Show Wi-Fi SSID and signal strength on macOS
# Usage: net-wifi-status [-qv]

SCRIPT_NAME="net-wifi-status"; SCRIPT_VERSION="1.0.0"
# shellcheck source=common.sh
. "$(dirname "$0")/common"

usage() {
  cat <<EOF
Usage: net-wifi-status [options]

Display current Wiâ€‘Fi SSID and signal strength on macOS.

Options:
  -q            Quiet
  -v            Verbose (repeatable)
  -h, --help    Show help
  --version     Show version
EOF
}

bars_from_rssi() {
  local rssi="$1"
  # Convert RSSI (negative dBm) to 0-4 bars heuristically
  if [[ -z "$rssi" ]]; then echo 0; return; fi
  if (( rssi >= -50 )); then echo 4
  elif (( rssi >= -65 )); then echo 3
  elif (( rssi >= -75 )); then echo 2
  elif (( rssi >= -85 )); then echo 1
  else echo 0; fi
}

main() {
  local show_help=0 show_version=0
  case "$(basename -- "$0")" in
    wifi_status.zsh)
      log_warn "Deprecated: use net-wifi-status instead" ;;
  esac
  local OPTIND=1 opt
  while getopts ":hvq-:" opt; do
    case "$opt" in
      h) show_help=1 ;;
      v) VERBOSE=$((VERBOSE+1)) ;;
      q) QUIET=1 ;;
      -) case "$OPTARG" in
           help) show_help=1 ;;
           version) show_version=1 ;;
           verbose) VERBOSE=$((VERBOSE+1)) ;;
           quiet) QUIET=1 ;;
           *) die "Unknown long option --$OPTARG" ;;
         esac ;;
      \?) die "Unknown option: -$OPTARG" ;;
    esac
  done
  shift $((OPTIND-1)) || true

  [[ $show_help -eq 1 ]] && { usage; exit 0; }
  [[ $show_version -eq 1 ]] && { print_version; exit 0; }

  local info
  info=$(system_profiler SPAirPortDataType -json 2>/dev/null) || die "system_profiler SPAirPortDataType failed"

  local ssid rssi status
  # Parse JSON output using sed/awk for portability
  status=$(printf '%s\n' "$info" | sed -n 's/.*"spairport_status_information" : "\([^"]*\)".*/\1/p')

  if [[ "$status" != "spairport_status_connected" ]]; then
    ssid=""
    rssi=""
  else
    # Extract SSID (redacted in output for privacy)
    ssid=$(printf '%s\n' "$info" | sed -n 's/.*"spairport_current_network_information" : {[^}]*"_name" : "\([^"]*\)".*/\1/p')
    # If SSID extraction failed or shows as redacted, set to generic connected state
    if [[ -z "$ssid" || "$ssid" == "<redacted>" ]]; then
      ssid="Connected"
    fi

    # Extract signal strength from "spairport_signal_noise" : "-63 dBm / -94 dBm" format
    rssi=$(printf '%s\n' "$info" | sed -n 's/.*"spairport_signal_noise" : "\(-[0-9]*\) dBm.*/\1/p' | head -1)
  fi 

  local bars; bars=$(bars_from_rssi "$rssi")
  local icon
  case "$bars" in
    4) icon="ðŸ“¶ðŸ“¶ðŸ“¶ðŸ“¶" ;;
    3) icon="ðŸ“¶ðŸ“¶ðŸ“¶" ;;
    2) icon="ðŸ“¶ðŸ“¶" ;;
    1) icon="ðŸ“¶" ;;
    0) icon="âœ–" ;;
  esac

  if [[ -n "$ssid" ]]; then
    echo "SSID: $ssid"
  else
    echo "SSID: (disconnected)"
  fi
  echo "Signal: $icon ($rssi dBm)"
}

main "$@"
