{
  "permissions": {
    "allow": [
      "Bash(R -e:*)",
      "Bash(Rscript:*)",
      "Bash(awk:*)",
      "Bash(basename:*)",
      "Bash(brew info:*)",
      "Bash(brew list:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(echo:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo list:*)",
      "Bash(git branch:*)",
      "Bash(git describe:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(git stash list:*)",
      "Bash(git status:*)",
      "Bash(git tag:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(nix eval:*)",
      "Bash(nix flake metadata:*)",
      "Bash(nix flake show:*)",
      "Bash(nvim:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(quarto check:*)",
      "Bash(quarto inspect:*)",
      "Bash(readlink:*)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(uniq:*)",
      "Bash(uv:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Edit",
      "Glob",
      "Grep",
      "LS",
      "NotebookEdit",
      "Read",
      "Task",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "deny": [
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(dd:*)",
      "Bash(defaults write:*)",
      "Bash(diskutil:*)",
      "Bash(env:*)",
      "Bash(git branch -D:*)",
      "Bash(git clean:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(launchctl:*)",
      "Bash(nix-collect-garbage:*)",
      "Bash(pkill:*)",
      "Bash(reboot:*)",
      "Bash(rm:*)",
      "Bash(rmdir:*)",
      "Bash(shutdown:*)",
      "Bash(sudo:*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ],
    "ask": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/claude-notify --save-pane 'Waiting for input...' 'Claude Code'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/claude-notify --save-pane 'Task completed!' 'Claude Code'"
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "enabledPlugins": {},
  "cleanupPeriodDays": 30,
  "prefersReducedMotion": false,
  "alwaysThinkingEnabled": true,
  "effortLevel": "medium"
}
