{
  "permissions": {
    "allow": [
      "Read", "Glob", "Grep", "LS", "Edit", "Write",
      "Task", "NotebookEdit", "WebFetch", "WebSearch",
      "Bash(brew info:*)", "Bash(brew list:*)",
      "Bash(cat:*)", "Bash(echo:*)", "Bash(ls:*)", "Bash(find:*)",
      "Bash(head:*)", "Bash(tail:*)", "Bash(wc:*)",
      "Bash(grep:*)", "Bash(rg:*)",
      "Bash(readlink:*)", "Bash(realpath:*)",
      "Bash(basename:*)", "Bash(dirname:*)",
      "Bash(tree:*)", "Bash(file:*)", "Bash(stat:*)",
      "Bash(which:*)", "Bash(diff:*)",
      "Bash(sort:*)", "Bash(uniq:*)",
      "Bash(jq:*)", "Bash(sed:*)", "Bash(awk:*)", "Bash(curl:*)",
      "Bash(uv:*)", "Bash(nvim:*)",
      "Bash(python:*)", "Bash(python3:*)",
      "Bash(R -e:*)", "Bash(Rscript:*)",
      "Bash(nix eval:*)", "Bash(nix flake show:*)", "Bash(nix flake metadata:*)",
      "Bash(quarto check:*)", "Bash(quarto inspect:*)",
      "Bash(gh issue list:*)", "Bash(gh issue view:*)",
      "Bash(gh repo list:*)", "Bash(gh pr list:*)",
      "Bash(gh pr view:*)", "Bash(gh api:*)",
      "Bash(git log:*)", "Bash(git diff:*)", "Bash(git status:*)",
      "Bash(git show:*)", "Bash(git branch:*)", "Bash(git tag:*)",
      "Bash(git remote:*)", "Bash(git describe:*)",
      "Bash(git rev-parse:*)", "Bash(git stash list:*)",
      "Bash(git shortlog:*)"
    ],
    "deny": [
      "Bash(rm:*)", "Bash(rmdir:*)",
      "Bash(git push --force:*)", "Bash(git push -f:*)",
      "Bash(git reset --hard:*)", "Bash(git clean:*)",
      "Bash(git branch -D:*)",
      "Bash(sudo:*)", "Bash(chmod:*)", "Bash(chown:*)",
      "Bash(killall:*)", "Bash(kill -9:*)", "Bash(pkill:*)",
      "Bash(shutdown:*)", "Bash(reboot:*)",
      "Bash(dd:*)", "Bash(diskutil:*)",
      "Bash(launchctl:*)", "Bash(defaults write:*)",
      "Bash(nix-collect-garbage:*)"
    ],
    "ask": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/claude-notify --save-pane 'Waiting for input...' 'Claude Code'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/claude-notify --save-pane 'Task completed!' 'Claude Code'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "enabledPlugins": {},
  "alwaysThinkingEnabled": true,
  "effortLevel": "medium"
}
